<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oldscreen">

    <TextView
        android:id="@+id/player"
        android:layout_width="245dp"
        android:layout_height="160dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/playernam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="193dp"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/televisheona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/scoreboard"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/playernam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fontfortitle"
        android:text="AdMe"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:translationY="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="153dp"
        android:layout_height="59dp"
        android:layout_marginStart="322dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/fontfortitle"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginStart="321dp"
        android:layout_marginTop="102dp"
        android:fontFamily="@font/fontfortitle"
        android:gravity="center"
        android:text="Player1"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>